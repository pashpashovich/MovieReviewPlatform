<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache-template>
    <cache alias="by.innowise.moviereview.entity.Genre" uses-template="default"/>
    <cache alias="by.innowise.moviereview.entity.Person" uses-template="default"/>
    <cache alias="by.innowise.moviereview.entity.Rating" uses-template="default"/>
    <cache alias="by.innowise.moviereview.entity.Watchlist" uses-template="default"/>
    <cache alias="by.innowise.moviereview.entity.User" uses-template="default"/>
    <cache alias="by.innowise.moviereview.entity.Review" uses-template="default"/>
</config>